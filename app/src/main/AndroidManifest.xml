                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.inventory.idealist.UsersProfileActivity" />
        </activity>
        <activity
            android:name="com.inventory.idealist.ChangeSOPasswordActivity"
            android:exported="false">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.inventory.idealist.StoreOwnerProfileActivity" />
        </activity>
        <activity
            android:name="com.inventory.idealist.ChangePasswordActivity"
            android:exported="false">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.inventory.idealist.UsersProfileActivity" />
        </activity>
        <activity
            android:name="com.inventory.idealist.UpdateSOEmailActivity"
            android:exported="false">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.inventory.idealist.StoreOwnerProfileActivity" />
        </activity>
        <activity
            android:name="com.inventory.idealist.UpdateEmailActivity"
            android:exported="false">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.inventory.idealist.UsersProfileActivity" />
        </activity>
        <activity
            android:name="com.inventory.idealist.UpdateSOProfileActivity"
            android:exported="false">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.inventory.idealist.StoreOwnerProfileActivity" />
        </activity>
        <activity
            android:name="com.inventory.idealist.MainSOActivity"
            android:exported="false" />
        <activity
            android:name="com.inventory.idealist.UpdateProfileActivity"
            android:exported="false">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.inventory.idealist.UsersProfileActivity" />
