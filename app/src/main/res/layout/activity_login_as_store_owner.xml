<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inventory.idealist.LoginAsStoreOwner"
    android:background="#CAC9CC">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_margin="15dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageViewLoginLogo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_white_bg_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewLoginHeadSO"
            android:layout_below="@id/imageViewLoginLogo"
            android:text="Login"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            android:textColor="@color/blue_main"
            android:textSize="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewLoginEmailSO"
            android:layout_marginTop="50dp"
            android:padding="6dp"
            android:layout_below="@+id/textViewLoginHeadSO"
            android:text="Email*"
            android:textColor="#555555"
            android:textSize="16dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextLoginEmailSO"
            android:hint="Enter Email"
            android:inputType="textEmailAddress"
            android:padding="6dp"
            android:textSize="16dp"
            android:background="@drawable/border"
            android:layout_below="@+id/textViewLoginEmailSO"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewLoginPasswordSO"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/editTextLoginEmailSO"
            android:text="Password*"
            android:textColor="#555555"
            android:padding="6dp"
            android:textSize="16dp"/>

        <ImageView
            android:id="@+id/imageViewShowHidePwdSO"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:layout_below="@+id/textViewLoginPasswordSO"
            android:layout_marginTop="1dp"
            android:layout_alignParentRight="true"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextLoginPasswordSO"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:layout_marginEnd="30dp"
            android:padding="6dp"
            android:textSize="16dp"
            android:background="@drawable/border"
            android:layout_below="@+id/textViewLoginPasswordSO"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/buttonLoginSO"
            android:layout_below="@+id/editTextLoginPasswordSO"
            android:layout_marginTop="50dp"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="70dp"
            android:backgroundTint="@color/orange_main"/>

<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/buttonLoginSO"
    android:id="@+id/textInputLayoutLoginSO">

    <TextView
        android:id="@+id/textViewLoginForPswSO"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Forgot Password"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewLoginSignUpSO"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:text="Sign Up"
        android:textSize="16dp"
        android:textStyle="bold" />
</com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login As Customer"
            android:id="@+id/textViewLoginAsCustomerSO"
            android:layout_below="@+id/textInputLayoutLoginSO"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:textSize="16dp"
            android:textStyle="bold"/>
        
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleLarge"
            android:id="@+id/progressBarLoginSO"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:elevation="10dp"
            android:visibility="gone"/>

    </RelativeLayout>

</ScrollView>