<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/tabel_border">

        <ImageView
            android:id="@+id/imageViewStore"
            android:layout_width="130dp"
            android:layout_height="140dp"
            android:contentDescription="Store Picture"
            android:background="@drawable/default_product_image"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textViewStoreNameCus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Store Name"
            android:layout_below="@id/imageViewStore"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp"
            android:background="@color/orange_main"
            android:layout_marginTop="8dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
